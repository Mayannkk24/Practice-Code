<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheets" href="/stylesheets/style.css">
     <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">

        <a class="text-blue-400" href="/">Go to Home</a>
        <h1 class="text-3xl mt-3 tracking-tighter mb-3">All users</h1>
        <div class="users flex gap-3 flex-wrap">
            <% if(users.length > 0){  %>

                 <% users.forEach(function(user){ %>
             <div class="user w-max-75 h-96 p-4 bg-zinc-800 rounded-lg"></div>
            <div class="w-full h-72 rounded-lg bg-zinc-400 overflow-hidden">
                <img class="w-full h-full object-cover object-top" src="<%= user.image %>" alt="">
            </div>
            <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
            <h5 class="text-zinc-400"><%= user.email %></h5>
            <div class="flex gap-3 mt-8">
                <a class="text-blue-300" href="">Edit User</a>
                <a class="text-red-400" href="/delete/<%= user._id %>">Delete User</a>
            </div>


       <% }) %>
            <% } else{ %>
               <h3 class="text-zinc-800">No Users found</h3>
           <% } %>

       
             
        </div>
    </div>
</body>
</html>